<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card">
    <div class="card-body">
      <%= form_with(model: @user, url: registrations_path, html: { class: "needs-validation" }) do |f| %>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :first_name, class: "form-label" %>
              <%= f.text_field :f_name, class: "form-control", required: true %>
              <div class="invalid-feedback">Please enter your first name.</div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :last_name, class: "form-label" %>
              <%= f.text_field :l_name, class: "form-control", required: true %>
              <div class="invalid-feedback">Please enter your last name.</div>
            </div>
          </div>
        </div>
        <div class="form-group"> 
          <%= f.label :email, class: "form-label" %><br/>
          <%= f.email_field :email, class: "form-control", required: true %>
          <div class="invalid-feedback">Please enter a valid email address.</div>
        </div>
        <div class="mb-3">
          <%= f.label :category, class: "form-label" %>
          <%= f.select :category, options_for_select(["customer", "seller"]), { }, { class: "form-select", required: true } %>
          <div class="invalid-feedback">Please select at least one category.</div>
        </div>
        <div class="form-group">
          <%= f.label :password, class: "form-label" %><br/>
          <%= f.password_field :password_digest, class: "form-control", required: true %>
          <div class="invalid-feedback">Please enter a password.</div>
        </div>
        <div class="mb-3">
          <%= f.label :location, class: "form-label" %>
          <%= f.select :location, options_for_select(@location.map { |loc| [loc.city, loc.id] }), {}, { class: "form-select", required: true, multiple: true} %>
        </div>
        <div class="form-group text-center">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
