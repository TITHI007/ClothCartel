<div class="d-flex justify-content-center">
  <div class="card">
    <div class="card-body">
      <%= form_with(model: cloth, local: true, html: { class: "needs-validation"}) do |form| %>
        <% if cloth.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(cloth.errors.count, "error") %> prohibited this cloth from being saved:</h4>
            <ul>
              <% cloth.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please enter a valid name.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_field :description, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please enter a valid description.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :cost, class: "form-label" %>
          <%= form.text_field :cost, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please enter a valid cost.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :location_id, class: "form-label" %>
          <%= form.collection_select :location_id, @locations, :id, :city, { prompt: "Select Location" }, { class: "form-select", required: true } %>
          <div class="invalid-feedback">
            Please select a location.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :image, class: "form-label" %>
          <%= form.file_field :image, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please select an image.
          </div>
        </div>

        <div class="mb-3">
          <%= form.submit "Save", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
