

<h1>Cloths</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-24">
      <div id="cloths">
        <% @cloths.each do |cloth| %>
          <%= render cloth %>
          <br/>
          <div class="text-center">
            <%= link_to "Show this cloth", cloth, class: "btn btn-primary" %>
          </div>
          <br/>
        <% end %>
      </div>
    </div>
  </div>



  <div class="row justify-content-end">
    <div class="col-md-8">
      <% if current_user && current_user.category == "seller" %>
        <div class="d-flex justify-content-end mb-3 mr-3">
          <%= link_to "New cloth", new_cloth_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

